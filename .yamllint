---
extends:
  default

ignore: |
  .git
  .venv

rules:
  document-start:
    ignore: |
      releases/*.yaml
      rosdep/*.yaml
  indentation:
    indent-sequences: false
    spaces: consistent
  key-duplicates: enable
  key-ordering:
    ignore: |
      .github/
      test/
  line-length:
    allow-non-breakable-words: true
    ignore: |
      rosdep/*.yaml
    max: 125
